                    <ee:message>
                        <ee:set-payload><![CDATA[%dw 2.0
output application/json
---
{message: "Resource not found"}]]></ee:set-payload>
                    </ee:message>
                    <ee:variables>
                        <ee:set-variable variableName="httpStatus">404</ee:set-variable>
                    </ee:variables>
                </ee:transform>
            </on-error-propagate>
        </error-handler>
    </flow>
    <flow name="get:\report\utilization:trainer-reports-api-config">
        <flow-ref doc:name="Flow Reference" doc:id="97096733-a445-4b81-9107-030319842699" name="get-utilization"/>
    </flow>
    <flow name="get:\report\(trainerEmail):trainer-reports-api-config">
        <set-variable value="#[attributes.uriParams.trainerEmail]" doc:name="trainerEmail" doc:id="2b0e1ae0-da15-4ed4-a299-3efec33a1bf9" variableName="trainerEmail"/>
		<flow-ref doc:name="get-report-by-email" doc:id="83bf98ef-ba8e-4724-9788-294e2b96cd63" name="get-report-by-email"/>
		<logger level="INFO" doc:name="Logger" doc:id="3479550e-65c1-4e99-b63d-c5f0d890f3b4" />
    </flow>
</mule>
