    <http:listener-config name="trainer-reports-api-httpListenerConfig">
        <http:listener-connection host="0.0.0.0" port="8081" />
    </http:listener-config>
    <apikit:config name="trainer-reports-api-config" api="resource::77cab550-53a1-4b36-95a6-10c814008004:trainer-report-papi:1.0.0:raml:zip:trainer-reports-api.raml" outboundHeadersMapName="outboundHeaders" httpStatusVarName="httpStatus" />
    <flow name="trainer-reports-api-main">
        <http:listener config-ref="trainer-reports-api-httpListenerConfig" path="/api/*">
            <http:response statusCode="#[vars.httpStatus default 200]">
                <http:headers>#[vars.outboundHeaders default {}]</http:headers>
            </http:response>
            <http:error-response statusCode="#[vars.httpStatus default 500]">
